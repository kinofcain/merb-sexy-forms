<%= sexy_form(:ul => {:class => "ul_class"}) do %>
  <%= text_field do |c|%>
    <% c[:class] = "text_class" %>
  <% end =%>
  <%= text_area "content" do |c|%>
    <% c[:class] = "textarea_class" %>
  <% end =%>
  <%= check_box do |c|%>
    <% c[:class] = "checkbox_class" %>
  <% end =%>
  <%= radio_button do |c|%>
    <% c[:class] = "radio_class" %>
  <% end =%>
  <%= select do |c|%>
    <% c[:class] = "select_class" %>
  <% end =%>
  <%= button "contents" do |c| %>
    <% c[:class] = "button_class" %>
  <% end =%>
  <%= submit "contents" do |c| %>
    <% c[:class] = "submit_class" %>
  <% end =%>
<% end =%>
